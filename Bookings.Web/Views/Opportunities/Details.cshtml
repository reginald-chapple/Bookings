@model Opportunity

@{
    ViewData["Title"] = "Campaign";
}

@section StyleTag{
    <style>
        .table > :not(caption) > * > * {
            background-color: transparent !important;
        }
        .table-borderless > tbody > tr > td,
        .table-borderless > tbody > tr > th,
        .table-borderless > tfoot > tr > td,
        .table-borderless > tfoot > tr > th,
        .table-borderless > thead > tr > td,
        .table-borderless > thead > tr > th {
            border: none;
        }
    </style>
}

@section SidebarWidgets {
    <partial name="Widgets/_NewsWidget" />
}

<div class="card card-body">
    <div class="row g-4">
        <div class="col-12 col-xl-7">
            <h1>@Model.Title</h1>
            <p>@Model.Details</p>
        </div>
        <div class="col-12 col-xl-5">
            <div class="row gx-0 gx-sm-7">
                <div class="col-12 mb-3">
                    <table class="lh-sm mb-4 mb-sm-0 mb-xl-4 table justify-content-center table-borderless">
                        <tbody>
                            <tr>
                                <td class="py-1" colspan="2">
                                    <div class="d-flex">
                                        <h5 class="text-900">@Model.Campaign!.Name</h5>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="align-top py-1 text-start">
                                    <div class="d-flex">
                                        <span class="bi bi-heart me-2 text-700 fs--1"></span>
                                        <span class="text-900 fw-bold mb-0 text-nowrap">Cause :</span>
                                    </div>
                                </td>
                                <td class="text-900 text-end">
                                    @Model.Campaign.Cause!.Name
                                </td>
                            </tr>
                            <tr>
                                <td class="align-top py-1 text-start">
                                    <div class="d-flex">
                                        <span class="bi bi-people me-2 text-700 fs--1"></span>
                                        <span class="text-900 fw-bold mb-0 text-nowrap">Applicants : </span>
                                    </div>
                                </td>
                                <td class="ps-1 py-1 text-1000 text-end">4</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-12 mb-3">
                    <table class="lh-sm table justify-content-center table-borderless">
                        <tbody>
                            <tr>
                                <td class="align-top py-1 text-900 text-nowrap fw-bold text-start">People needed : </td>
                                <td class="text-600 ps-3 text-end">2</td>
                            </tr>
                            <tr>
                                <td class="align-top py-1 text-900 text-nowrap fw-bold text-start">Positions filled :</td>
                                <td class="text-600 ps-3 text-end">0</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-12 mb-3">
                    <a asp-controller="Opportunities" asp-action="Apply" asp-route-id="@Model.Id" class="btn btn-primary-soft w-100">Apply</a>
                </div>
            </div>
        </div>
    </div>
</div>