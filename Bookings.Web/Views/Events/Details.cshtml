@model Meeting

@{
    ViewData["Title"] = "Events";
}

@section StyleTag {}

@section SidebarWidgets {
    <partial name="Widgets/_NewsWidget" />
}

<div class="row">
    <div class="col">
        <div class="card h-100">
             <div class="card-header d-sm-flex align-items-center text-center justify-content-sm-between border-0 pb-0">
                <h1 class="h4 card-title text-uppercase">@Model.Name</h1>
                <a class="btn btn-primary-soft" href="#"> 
                    <i class="bi bi-compass pe-1"></i> My Events
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-7 col-sm-12">
                        <div class="row g-2 mb-4">
                            <div class="col-sm-6">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-calendar-check fs-2"></i>
                                        <div class="">
                                            <p class="mb-0"><strong>@Model.StartTime.ToString("MM/dd/yyyy hh:mm tt")</strong></p>
                                            <p class="mb-0">Start</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-calendar-x fs-2"></i>
                                        <div class="">
                                            <p class="mb-0"><strong>@Model.EndTime.ToString("MM/dd/yyyy hh:mm tt")</strong></p>
                                            <p class="mb-0">End</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-geo-alt fs-2"></i>
                                        <div class="">
                                            <p class="mb-0"><strong>@Model.Location</strong></p>
                                            <p class="mb-0">Location</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-eye fs-2"></i>
                                        <div class="">
                                            <p class="mb-0"><strong>@Model.Visibility.GetEnumDescription()</strong></p>
                                            <p class="mb-0">Visibility</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-2 mb-4">
                            <div class="col-sm-12">
                                <p>@Model.Details</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-5 col-sm-12">
                        <div class="card bg-transparent">
                            <div class="card-header d-sm-flex justify-content-between align-items-center border-0">
                                <h5 class="card-title text-uppercase">Attending <span class="badge bg-danger bg-opacity-10 text-danger">230</span></h5>
                                <a class="btn btn-primary-soft btn-sm" href="#!" data-bs-toggle="modal" data-bs-target="#sendInviteModal"> Send invites</a>
                            </div>
                            <div class="card-body position-relative pt-0">
                                <div class="row g-3">
                                    <div class="col-6">
                                        <div class="card shadow-none text-center h-100">
                                            <div class="card-body p-2 pb-0">
                                                <div class="avatar avatar-story avatar-xl">
                                                    <a href="#!"><img class="avatar-img rounded-circle" src="~/assets/img/team/1.webp" alt=""></a>
                                                </div>
                                                <h6 class="card-title mb-1 mt-3"> <a href="#!"> Amanda Reed </a></h6>
                                                <p class="mb-0 small lh-sm">16 mutual connections</p>
                                            </div>
                                            <div class="card-footer p-2 border-0">
                                                <button class="btn btn-sm btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Send message"> <i class="bi bi-chat-left-text"></i> </button>
                                                <button class="btn btn-sm btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Remove friend"> <i class="bi bi-person-x"></i> </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="card shadow-none text-center h-100">
                                            <div class="card-body p-2 pb-0">
                                                <div class="avatar avatar-story avatar-xl">
                                                    <a href="#!"><img class="avatar-img rounded-circle" src="~/assets/img/team/3.webp" alt=""></a>
                                                </div>
                                                <h6 class="card-title mb-1 mt-3"> <a href="#!"> Amanda Reed </a></h6>
                                                <p class="mb-0 small lh-sm">16 mutual connections</p>
                                            </div>
                                            <div class="card-footer p-2 border-0">
                                                <button class="btn btn-sm btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Send message"> <i class="bi bi-chat-left-text"></i> </button>
                                                <button class="btn btn-sm btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Remove friend"> <i class="bi bi-person-x"></i> </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("SendInvite", new { meetingId = Model.Id })

@section JavaScripts {}

@section ScriptTag {}