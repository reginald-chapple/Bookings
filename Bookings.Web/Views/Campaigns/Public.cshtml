@model CampaignDetailsModel

@{
    ViewData["Title"] = "Campaign";
}

@section StyleTag{
    <style>
        .timeline-vertical .timeline-item:not(:last-child) .timeline-item-bar .timeline-bar {
            position: absolute;
            height: 100px;
            left: 11px;
            top: 24px;
        }
        .timeline-vertical.timeline-with-details .timeline-item:not(:last-child) .timeline-item-bar .timeline-bar {
            height: calc(100% - 1rem) !important;
        }
        .timeline-basic .timeline-item:hover .timeline-item-bar .icon-item {
            background: var(--phoenix-gray-100) !important;
            border-color: var(--phoenix-gray-300) !important;
        }
        .timeline-basic .timeline-item:hover .timeline-item-title {
            color: var(--phoenix-gray-1100) !important;
        }
        .timeline-basic .timeline-item:hover .timeline-time {
            color: var(--phoenix-gray-1100) !important;
        }
        .timeline-basic .timeline-item:not(:last-child) .timeline-item-bar {
            height: 100%;
        }
        .timeline-basic .timeline-item:not(:last-child) .timeline-item-bar .timeline-bar {
            position: absolute;
            height: calc(100% - 2.5rem);
            left: 20px;
            top: 40px;
        }
        .timeline li {
            position: relative;
            padding-left: 1.5rem;
        }
        .timeline li:after {
            position: absolute;
            content: "";
            height: 0.625rem;
            width: 0.625rem;
            border-radius: 50%;
            background: var(--phoenix-gray-200);
            left: 0;
            top: 50%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
        }
        .timeline li:not(:last-child):before {
            position: absolute;
            content: "";
            height: 100%;
            width: 1px;
            background-color: var(--phoenix-gray-200);
            top: 50%;
            left: 0.3125rem;
        }
        .icon-item.icon-item-md {
            height: 2.5rem;
            width: 2.5rem;
        }
        .icon-item {
            border: none !important;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            
        }
    </style>
}

@section SidebarWidgets {
    <partial name="Widgets/_NewsWidget" />
}

<div class="row">
    <div class="col">
        <div class="card h-100">
            <div class="card-header d-sm-flex align-items-center text-center justify-content-sm-between border-0 pb-0">
                <h1 class="h4 card-title">Discover Campaigns</h1>
                
                <a class="btn btn-primary-soft" href="#">
                    <i class="bi bi-compass pe-1"></i> Campaigns
                </a>
                
            </div>
            <div class="card-body">
                <div class="row g-2 mb-4">
                    <div class="col-sm-4">
                        <div class="d-flex border rounded-3">
                            <div class="p-3">
                                <i class="bi bi-heart fs-2"></i>
                                <div class="">
                                    <h5 class="mb-0">@Model.Campaign!.Cause!.Name</h5>
                                    <p class="mb-0">Cause</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="d-flex border rounded-3">
                            <div class="p-3">
                                <i class="bi bi-calendar-check fs-2"></i>
                                <div class="">
                                    <h5 class="mb-0">04/01/2024</h5>
                                    <p class="mb-0">Deadline</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="d-flex border rounded-3">
                            <div class="p-3">
                                <i class="bi bi-arrow-through-heart fs-2"></i>
                                <div class="">
                                    <h5 class="mb-0">$@Model.Campaign!.FundraisingGoal.ToString("0.00")</h5>
                                    <p class="mb-0">Fundraising Goal</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="border rounded-3 mb-3">
                            <div class="p-3">
                                <div class="d-flex align-items-center mb-3">
                                    <!-- Avatar -->
                                    <div class="avatar avatar-story avatar-xxl me-2">
                                        <a href="#!"> <img class="avatar-img rounded-circle" src="~/media/members/@(Model.Creator!.Image)" alt=""> </a>
                                    </div>
                                    <!-- Info -->
                                    <div>
                                        <div class="nav nav-divider">
                                            <h5 class="nav-item mb-0"> <a href="#!"> @Model.Creator!.FullName </a></h5>
                                        </div>
                                        <p class="mb-0 small">Manager</p>
                                    </div>
                                </div> 
                                <p>
                                    @Model.Campaign.Reason
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="accordion mb-3" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-1" aria-expanded="false" aria-controls="collapse-1">
                                        Problem
                                    </button>
                                </h2>
                                <div id="collapse-1" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <p>@Model.Campaign!.Problem</p>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-2" aria-expanded="false" aria-controls="collapse-2">
                                        Goal
                                    </button>
                                </h2>
                                <div id="collapse-2" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <p>@Model.Campaign!.Goal</p>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-3" aria-expanded="false" aria-controls="collapse-3">
                                        Beneficiaries
                                    </button>
                                </h2>
                                <div id="collapse-3" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <p>@Model.Campaign!.Beneficiaries</p>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-4" aria-expanded="false" aria-controls="collapse-4">
                                        Importance
                                    </button>
                                </h2>
                                <div id="collapse-4" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <p>@Model.Campaign!.Importance</p>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-5" aria-expanded="false" aria-controls="collapse-5">
                                        Solution
                                    </button>
                                </h2>
                                <div id="collapse-5" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <p>@Model.Campaign!.Solution</p>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse-6" aria-expanded="false" aria-controls="collapse-6">
                                        Expenditures
                                    </button>
                                </h2>
                                <div id="collapse-6" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-12 p-2">
                                                <div class="border-bottom border-200 gx-0 flex-1 cursor-pointer pb-3">
                                                   <div class="mb-1 mb-md-0 d-flex justify-content-between align-items-center lh-1">
                                                        <input name="IsCompleted" value="true" class="form-check-input my-1 me-2" type="checkbox" />
                                                        <label for="item-1" class="form-check-label mb-1 mb-md-0 mb-xl-1 mb-xxl-0 fs-0 me-2 line-clamp-1 text-900 cursor-pointer">
                                                            <span class="fw-bold">Item 2</span>
                                                            <span class="text-700 fs--2 mb-md-0 me-2 me-md-3 me-xl-2 me-xxl-3 mt-2 mb-0 d-block">Mar 10, 2024 12:22 PM</span>
                                                        </label>
                                                        <button type="button" class="btn ms-auto btn-primary-soft btn-sm">NEEDED</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 p-2">
                                                <div class="border-bottom border-200 gx-0 flex-1 cursor-pointer pb-3">
                                                    <div class="mb-1 mb-md-0 d-flex justify-content-between align-items-center lh-1">
                                                        <input class="form-check-input my-1 me-2" type="checkbox" id="checkbox-todo-1" checked="true" disabled />
                                                        <label class="form-check-label mb-1 mb-md-0 mb-xl-1 mb-xxl-0 fs-0 me-2 line-clamp-1 text-900 cursor-pointer">
                                                            <span class="fw-bold text-decoration-line-through">Item 1</span>
                                                            <span class="text-700 fs--2 mb-md-0 me-2 me-md-3 me-xl-2 me-xxl-3 mt-2 mb-0 d-block">Mar 10, 2024 12:22 PM</span>
                                                        </label>
                                                        <button type="button" class="btn ms-auto btn-primary-soft btn-sm" disabled>AQUIRED</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row gy-3">
                    <div class="col-12">
                        <h4>Action Items</h4>
                    </div>
                    <div class="col-12">
                        @foreach (var item in Model.ActionItems)
                        {
                            <h5 class="py-3 border-y border-300 mb-3 ms-8">@item.Label</h5>
                            <div class="timeline-basic mb-9">
                            @foreach(var child in item.Children)
                            {
                                <div class="timeline-item">
                                    <div class="row g-3">
                                        <div class="col-auto">
                                            <div class="timeline-item-bar position-relative">
                                                <div class="icon-item icon-item-md rounded-7 border">
                                                    <i class="bi bi-circle-fill text-primary fs--1"></i>
                                                </div>
                                                @* <span class="timeline-bar border-end border-dashed border-300"></span> *@
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="d-flex justify-content-between">
                                                <div class="d-flex mb-2">
                                                    <h6 class="lh-sm mb-0 me-2 text-800 timeline-item-title">
                                                        @child.Label
                                                    </h6>
                                                </div>
                                                <p class="text-500 fs--1 mb-0 text-nowrap timeline-time">
                                                    <span class="fbi bi-clock-fill me-1"></span> @child.Created.ToString("MM/dd/yyyy")
                                                </p>
                                            </div>
                                            <h6 class="fs--2 fw-normal mb-3">by <a class="fw-semi-bold" href="#!">@Model.Creator.FullName</a></h6>
                                            <p class="fs--1 text-800 w-sm-60 mb-5">
                                                @child.Details.Truncate(300)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section JavaScripts {}

@section ScriptTag {}