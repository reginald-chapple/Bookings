@model CampaignDetailsModel

@{
    ViewData["Title"] = "Campaign";
}

@section StyleTag{}

@section SidebarWidgets {
    <partial name="Widgets/_NewsWidget" />
}

<div class="row">
    <div class="col">
        <div class="card h-100">
            <div class="card-header d-sm-flex align-items-center text-center justify-content-sm-between border-0 pb-0">
                <h1 class="h4 fw-light text-uppercase">@Model.Campaign!.Name</h1>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-primary-soft" asp-controller="Members" asp-action="Campaigns" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)"> 
                        <i class="bi bi-person-circle pe-1"></i> My Campaigns
                    </a>
                    <a class="btn btn-primary-soft" href="#"> 
                        <i class="bi bi-globe-americas pe-1"></i> Community
                    </a>
                </div>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("Campaigns/_CampaignTabList", Model.Campaign)
                <div class="tab-content mb-0 pb-0">
                    <div class="tab-pane fade show active">
                        <div class="row g-2 mb-4">
                            <div class="col-sm-4">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-heart fs-2"></i>
                                        <div class="">
                                            <h5 class="mb-0">@Model.Campaign!.Cause!.Name</h5>
                                            <p class="mb-0">Cause</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-calendar-check fs-2"></i>
                                        <div class="">
                                            <h5 class="mb-0">04/01/2024</h5>
                                            <p class="mb-0">Deadline</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="d-flex border rounded-3">
                                    <div class="p-3">
                                        <i class="bi bi-arrow-through-heart fs-2"></i>
                                        <div class="">
                                            <h5 class="mb-0">$@Model.Campaign!.FundraisingGoal.ToString("0.00")</h5>
                                            <p class="mb-0">Fundraising Goal</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 ">
                                <div class="border rounded-3 mb-3">
                                    <div class="p-3">
                                        <div class="d-flex align-items-center mb-3">
                                            <!-- Avatar -->
                                            <div class="avatar avatar-story avatar-xxl me-2">
                                                <a href="#!"> <img class="avatar-img rounded-circle" src="~/media/members/@(Model.Creator!.Image)" alt=""> </a>
                                            </div>
                                            <!-- Info -->
                                            <div>
                                                <div class="nav nav-divider">
                                                    <h5 class="nav-item mb-0"> <a href="#!"> @Model.Creator!.FullName </a></h5>
                                                </div>
                                                <p class="mb-0 small">Occupation</p>
                                            </div>
                                        </div> 
                                        <p>
                                            @Model.Campaign.Reason
                                        </p>
                                    </div>
                                </div>

                                <h4>Problem</h4>
                                <p>@Model.Campaign!.Problem</p>

                                <h4>Goal</h4>
                                <p>@Model.Campaign!.Goal</p>

                                <h4>Beneficiaries</h4>
                                <p>@Model.Campaign!.Beneficiaries</p>

                                <h4>Importance</h4>
                                <p>@Model.Campaign!.Importance</p>

                                <h4>Solution</h4>
                                <p>@Model.Campaign!.Solution</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section JavaScripts {
   <!-- <script src="~/lib/echarts/echarts.min.js"></script> -->
}

@section ScriptTag {}