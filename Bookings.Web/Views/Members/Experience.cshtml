@model UserExperienceModel

@{
    ViewData["Title"] = "Member";
}

@section StyleTag{}

@section SidebarWidgets {
    <partial name="Widgets/_NewsWidget" />
}


<div class="row g-2">
    <div class="col-12">
        @await Html.PartialAsync("Resumes/_UserCard", Model)
    </div>

    <div class="col-12 ">
        <div class="card h-100">
            <div class="card-body">
                <ul class="nav nav-tabs nav-bottom-line justify-content-center justify-content-md-start">
                    <li class="nav-item"> <a class="nav-link active" data-bs-toggle="tab" href="#tab-1"> Resume </a> </li>
                    <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-2"> History </a> </li>
                    <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-3"> Reviews </a> </li>
                </ul>
                <div class="tab-content mb-0 pb-0">
                    <div class="tab-pane fade show active" id="tab-1">
                        <h5>Background</h5>
                        <p>@(Model.Resume != null ? Model.Resume!.Background : "No information provided")</p>

                        <h5>Experience</h5>
                        <p>@(Model.Resume != null ? Model.Resume!.Experience : "No information provided")</p>

                        <h5>Skills</h5>
                        <p>@(Model.Resume != null ? Model.Resume!.Skills : "No information provided")</p>

                        <h5>Education</h5>
                        <p>@(Model.Resume != null ? Model.Resume!.Education : "No information provided")</p>
                    </div>
                    <div class="tab-pane fade" id="tab-2">
                        ...
                    </div>
                    <div class="tab-pane fade" id="tab-3">
                        <partial name="Resumes/_Review" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section JavaScripts {}

@section ScriptTag {}