@model Team

<div class="card bg-transparent mb-3">
    <div class="card-header pb-0">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="text-1100 text-uppercase fw-light">Positions</h5>
            <div class="search-box mb-2 mb-sm-0">
                <form class="position-relative" data-bs-toggle="search" data-bs-display="static">
                    <div class="input-group mb-3">
                        <input type="search" class="form-control" placeholder="Search positions" aria-label="Search"
                            aria-describedby="button-addon2">
                        <button class="btn btn-primary-soft" type="button" id="button-addon2">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body py-0" style="max-height: 500px; min-height: 200px; overflow-y: scroll;">
        <div class="row px-1 py-3">
            @foreach(var position in Model.Positions.Split(";"))
            {
                @if(!string.IsNullOrEmpty(position) || !string.IsNullOrWhiteSpace(position))
                {
                    <div class="col-12 p-2">
                        <div class="border-bottom border-200 gx-0 flex-1 cursor-pointer pb-3">
                            <div class="mb-1 mb-md-0 d-flex justify-content-between align-items-center lh-1">
                                <div class="d-flex align-items-center">
                                <div>
                                        <div class="nav nav-divider">
                                            <h6 class="nav-item card-title mb-0">
                                                @position
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <button type="button" class="btn rounded-3 ms-auto btn-danger-soft btn-sm">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>