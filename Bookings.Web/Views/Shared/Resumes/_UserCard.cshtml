@model UserExperienceModel

<div class="card overflow-hidden">
    <div class="h-100px"></div>
        <div class="card-body pt-0">
            <div class="text-center">
            <div class="avatar avatar-xxl mt-n5 mb-3">
                <a href="#!">
                    <img class="avatar-img rounded-circle border border-white border-3" src="~/media/members/@(Model.Creator!.Image)" alt="">
                </a>
            </div>
            <h5 class="mb-0"> <a href="#!">@Model.Creator.FullName </a> </h5>
            <small>Web Developer</small>
            @* <p class="mt-3">I'd love to change the world, but they wonâ€™t give me the source code.</p> *@

            <!-- User stat START -->
            <div class="my-2 hstack gap-2 gap-xl-3 justify-content-center">
                <!-- User stat item -->
                <div>
                    <h6 class="mb-0">@Model.CampaignCount</h6>
                    <small>Campaigns</small>
                </div>
                <!-- Divider -->
                <div class="vr"></div>
                <!-- User stat item -->
                <div>
                    <h6 class="mb-0">@Model.FollowerCount</h6>
                    <small>Followers</small>
                </div>
                <!-- Divider -->
                <div class="vr"></div>
                <!-- User stat item -->
                <div>
                    <h6 class="mb-0">@Model.FollowingCount</h6>
                    <small>Following</small>
                </div>
            </div>
        </div>
    </div>
</div>