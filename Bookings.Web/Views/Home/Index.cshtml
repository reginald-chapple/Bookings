@model IEnumerable<Cause>

@{
    ViewData["Title"] = "Home";
}

@section Stylesheets {}

@section StyleTag {}

@section SidebarWidgets {
    <partial name="Widgets/_NewsWidget" />
}

<div class="card">
    <div class="card-header border-0 pb-0">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <h4 class="card-title mb-0"> Causes</h4>
            </div>
            <div class="dropdown">
				<a href="#" class="text-secondary btn btn-secondary-soft-hover py-1 px-2" id="cardFeedAction1"
					data-bs-toggle="dropdown" aria-expanded="false">
					<i class="bi bi-three-dots"></i>
				</a>
				<!-- Card feed action dropdown menu -->
				<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cardFeedAction1">
					<li><a class="dropdown-item" href="#"> <i class="bi bi-info-circle fa-fw pe-2"></i>About</a></li>
					<li><a class="dropdown-item" href="#"> <i class="bi bi-inbox fa-fw pe-2"></i>Contact</a></li>
					<li>
						<hr class="dropdown-divider">
					</li>
					<li><a class="dropdown-item" href="#"> <i class="bi bi-question-circle fa-fw pe-2"></i>FAQ</a></li>
				</ul>
			</div>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-4">
            @foreach(var item in Model)
            {
                @if (item.ParentId == null)
                {
                    <div class="col-12 col-xl-4">
                        <ul class="list-unstyled">
                            <li><strong class="fs-4">@item.Name</strong></li>
                            @foreach(var child in item.Children)
                            {
                                @*  *@
                                <li>
                                    <a style="color: var(--bs-body-color);" asp-controller="Causes" asp-action="Campaigns" asp-route-slug="@child.Slug">
                                        @child.Name
                                    </a>
                                </li>
                            }   
                        </ul>
                    </div>
                }
            }
            <div class="col-12 col-xl-3">
                <ul class="list-unstyled">
                    <li><strong class="fs-4">Social</strong></li>
                    <li>
                        <a style="color: var(--bs-body-color);" href="#">
                            Communities
                        </a>
                    </li>
                    <li>
                        <a style="color: var(--bs-body-color);" href="#">
                            Events
                        </a>
                    </li>
                    <li>
                        <a style="color: var(--bs-body-color);" asp-controller="Opportunities" asp-action="Index">
                            Volunteer
                        </a>
                    </li>
                    <li>
                        <a style="color: var(--bs-body-color);" asp-controller="Dating" asp-action="Index">
                            Dating
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section JavaScripts {}

@section ScriptTag {}
